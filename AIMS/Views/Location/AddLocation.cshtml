<script type="text/javascript" src="~/MyScripts/location/add-location.js"></script>
<div ng-controller="myCtrl" ng-init="initialize()">
    <div class="page-title">
        <div class="title_left"> <!-- ADD LOCATION -->
            <h3>
                Location | <small>Manage Locations</small>
            </h3>
        </div>
        <div class="title_right">
            <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                <div class="input-group">
                    <input ng-model="searchText" type="text" class="form-control" placeholder="Search here...">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">Go!</button>
                    </span>
                </div>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12">
            <div class="x_panel">
                <div class="x_content">
            <!-- content starts here -->
                    <div>
                        <!--REVIEW-->
                        <button ng-click="showAddLocationModal()" class="btn btn-success btn-sm pull-right"><i class="glyphicon glyphicon-plus"></i> Add Location</button>
                        <table class="table table-striped table-bordered" id="tableid">
                            <thead>
                                <tr>
                                    <th ng-click="predicate='Id'; reverse=!reverse">ID</th>
                                    <th ng-click="predicate='Name'; reverse=!reverse"> Name</th>
                                    <th> Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="location in locations | orderBy:predicate:reverse | filter: searchText">
                                    <td>
                                        <span ng-bind="location.LocationID"></span>
                                    </td>
                                    <td>
                                        <span ng-bind="location.LocationName"></span>
                                    </td>
                                    <td>
                                        <button ng-click="showEditLocation(location)" class="btn btn-primary btn-sm"><i class="glyphicon glyphicon-pencil"></i>Update </button>
                                    </td>
                                </tr>
                                <tr ng-show="(locations | filter:searchText).length == 0">
                                    <td colspan="3" id="locationAction" align="center">No results found...</td>
                                </tr>
                            </tbody>
                        </table>

    <!--Add location modal-->
                        <div id="addLocationModal" class="modal fade" role="dialog">
                            <div class="modal-dialog">
                                <form id="locationForm" name="locationForm">
                                    <div class="modal-content" style="width: 100% !important;left: 0% !important;">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                                            <h2 class="modal-title">Add New Location</h2>
                                        </div>
                                        <div class="modal-body">
                                            <br />
                                            <br />
                                            <div class="input-group">
                                                <span class="input-group-addon">Location <i class="fa fa-map-marker"></i></span>
                                                <input ng-model="newLocation" id="locationName" type="text" class="form-control" name="locationName" placeholder="Location Name" required>
                                            </div>
                                            <br />
                                        </div>
                                        <div class="modal-footer">
                                            <button class="btn btn-danger btn-sm" ng-click="closeAddLocationModal()"><i class="glyphicon glyphicon-remove"></i>Close</button>
                                            <button class="btn btn-success btn-sm" ng-disabled="!locationForm.locationName.$valid" ng-click="addLocation()"><i class="glyphicon glyphicon-plus"></i>Add</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
    <!--Edit location modal-->
                        <div id="editLocationModal" class="modal fade" role="dialog">
                            <div class="modal-dialog">
                                <form name="editForm">
                                    <div class="modal-content" style="width: 100% !important;left: 0% !important;">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                                            <h2 class="modal-title">Update Location</h2>
                                        </div>
                                        <div class="modal-body">
                                            <table>
                                                <tbody>
                                                    <tr style="margin-bottom:10px;">
                                                        <td><strong>Location ID</strong></td>
                                                        <td><strong> :&nbsp;&nbsp; </strong></td>
                                                        <td>
                                                            <span style="margin-bottom:10px" ng-bind="locationCopy.LocationID"></span>
                                                        </td>
                                                    </tr>
                                                    <tr style="margin-bottom:10px">
                                                        <td><strong>Name </strong></td>
                                                        <td><strong> : &nbsp;&nbsp;</strong></td>

                                                        <td>
                                                            <span ng-bind="locationCopy.LocationName" style="margin-bottom:10px"></span>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td><strong>New Location</strong></td>

                                                        <td><strong>: &nbsp;&nbsp;</strong></td>
                                                        <td class="form-group">
                                                            <input ng-model="newLocatioName" name="newLocationName" id="newLocationName" type="text" class="form-control" style="width:250px!important;" placeholder="Enter new location" required/>
                                                        </td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                            <br />
                                        </div>
                                        <div class="modal-footer">
                                            <button class="btn btn-danger btn-sm" ng-click="closeEditLocationModal()"><i class="glyphicon glyphicon-remove"></i>Close</button>
                                            <button class="btn btn-primary btn-sm" ng-disabled="!editForm.newLocationName.$valid" ng-click="editLocation(locationCopy.LocationID)"><i class="glyphicon glyphicon-pencil"></i>Update</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
     <!-- content ends here -->
                </div>
            </div>
        </div>
    </div>
</div>

